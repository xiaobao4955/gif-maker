<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

         <TextView
            android:id="@+id/tv_ptg"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_bg_ptg"
            android:gravity="center|end"
            android:padding="10dp"
            android:text="Photo to Gif"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_ctg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_ctg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/main_bg_ctg"
            android:gravity="center|bottom"
            android:padding="10dp"
            android:text="Camera to Gif"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_vtg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tv_ptg"
            app:layout_constraintTop_toTopOf="@id/tv_ptg" />

        <TextView
            android:id="@+id/tv_vtg"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_bg_vtg"
            android:gravity="center|end"
            android:padding="10dp"
            android:text="Video to Gif"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tv_ptg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/tv_ptg"
            app:layout_constraintTop_toBottomOf="@id/tv_ptg" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="GIF MAKER"
            android:textColor="@color/black_212222"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/camera"
            app:layout_constraintBottom_toBottomOf="@id/tv_ctg"
            app:layout_constraintEnd_toEndOf="@id/tv_ctg"
            app:layout_constraintStart_toStartOf="@id/tv_ctg"
            app:layout_constraintTop_toTopOf="@id/tv_ctg" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/album"
            app:layout_constraintBottom_toBottomOf="@id/tv_ptg"
            app:layout_constraintStart_toStartOf="@id/tv_ptg"
            app:layout_constraintTop_toTopOf="@id/tv_ptg" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/video"
            app:layout_constraintBottom_toBottomOf="@id/tv_vtg"
            app:layout_constraintStart_toStartOf="@id/tv_vtg"
            app:layout_constraintTop_toTopOf="@id/tv_vtg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:text="You can generate gifs from pictures and videos"
            android:textColor="@color/black_212222"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ctg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data />
</layout>
